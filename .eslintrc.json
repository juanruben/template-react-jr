{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "linebreak-style": 0,
        "react/prop-types": [
            2,
            {
                "ignore": [
                    "children"
                ]
            }
        ],
        "react/forbid-prop-types": 0,
        "import/prefer-default-export": 0,
        "radix": 0,
        "react/jsx-props-no-spreading": 0,
        "no-underscore-dangle": 0
    },
    "parser": "babel-eslint"
}